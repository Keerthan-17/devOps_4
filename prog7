sudo su
apt install ansible -y
nano hosts.ini

[local]
localhost ansible_connection =local

nano setup.yml

---
-name: Basic server setup
 hosts: localhost
 become: true
 tasks:
 - name: install curl
   apt:
      name: curl
      state: present
 - name: install git apt
  apt:
     name: git
     state: present

ansible-playbook -i hosts.ini setup.yml
